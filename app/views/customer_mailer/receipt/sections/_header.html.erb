<% charge_info = receipt_presenter.charge_info %>
<div>
  <div style="margin-bottom: 8px; overflow: hidden;">
    <span style="font-weight: bold; float: left;">Order ID:</span>
    <span style="float: right;"><%= charge_info.order_id %></span>
  </div>
  <div style="margin-bottom: 8px; margin-top: 4px; overflow: hidden;">
    <span style="font-weight: bold; float: left;">Order date:</span>
    <span style="float: right;"><%= charge_info.formatted_created_at %></span>
  </div>
  <% if charge_info.formatted_total_transaction_amount.present? %>
    <div style="margin-top: 4px; overflow: hidden;">
      <span style="font-weight: bold; float: left;">Total:</span>
      <span style="float: right;"><%= charge_info.formatted_total_transaction_amount %></span>
    </div>
  <% end %>
</div>
