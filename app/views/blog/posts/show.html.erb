<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <article class="max-w-3xl mx-auto">
    <header class="mb-8">
      <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4"><%= @post.title %></h1>
      <p class="text-gray-600">
        Published in <span class="font-semibold"><%= @post.category %></span> on <%= @post.date.strftime("%B %d, %Y") %>
      </p>
      <% if @post.tags.any? %>
        <div class="mt-2">
          <% @post.tags.each do |tag| %>
            <%= link_to tag, blog_tag_path(tag_name: tag.parameterize), class: "inline-block bg-gray-200 rounded-full px-3 py-1 text-xs font-semibold text-gray-700 mr-2 mb-2 hover:bg-gray-300" %>
          <% end %>
        </div>
      <% end %>
    </header>

    <% if @post.featured_image %>
      <div class="mb-8">
        <%= image_tag @post.featured_image, alt: @post.title, class: "w-full h-auto object-cover rounded-lg shadow-md" %>
      </div>
    <% end %>

    <div class="prose prose-lg max-w-none text-gray-800">
      <%= @post.html_content.html_safe %>
    </div>

    <%# TODO: Add navigation to next/previous posts if desired %>
    <%# TODO: Add social sharing buttons %>
    <%# TODO: Add comments section if planned %>

    <div class="mt-12 pt-8 border-t border-gray-200">
      <%= link_to "â† Back to Blog", blog_index_path, class: "text-pink-600 hover:text-pink-800 font-semibold" %>
    </div>
  </article>
</div>

<%= render "home/shared/footer" %>
